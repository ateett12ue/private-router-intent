{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ESNext",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "resolveJsonModule": true,
        "paths": {
            "*": ["./node_modules/*", "src/types/*"]
        },
        "skipLibCheck": true
    },
    "include": ["./src/**/*", "./src/*"]
}
